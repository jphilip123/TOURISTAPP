        savannah.addPicture("Savannah.jpg");
        savannah.addPicture("Savannah.jpg");
        savannah.addPicture("Savannah.jpg");
        savannah.addPicture("Savannah.jpg");
        savannah.addPicture("Savannah.jpg");
        destinations.put("Savannah", savannah);

        // Destination 5: Athens
